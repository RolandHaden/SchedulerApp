<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/burnt</item>
        <item name="android:textColorPrimary">@color/beige</item>
        <item name="colorPrimary">@color/beige</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/beige</item>
        <item name="android:textSize">16sp</item>
        <item name="android:weekNumberColor">@color/dim_beige</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/dim_beige</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>


    <style name="CustomDatePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:windowBackground">@drawable/floating_dialog_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorAccent">@color/burnt</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/custom_pos_button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/custom_neg_button</item>


        <item name="android:textColorPrimary">@color/beige</item>
        <item name="android:textColorSecondary">@color/dim_beige</item>
        <item name="android:textColorPrimaryInverse">@color/beige</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/ltgray</item>
        <item name="android:headerMonthTextAppearance">@style/CustomHeaderMonthTextAppearance</item>
    </style>

    <style name="CustomHeaderMonthTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/beige</item>
    </style>


    <style name="CustomTimePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
        <item name="android:windowBackground">@drawable/floating_dialog_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorAccent">@color/burnt</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/custom_pos_button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/custom_neg_button</item>

        <item name="android:textColor">@color/beige</item>
        <item name="android:textColorPrimary">@color/beige</item>
        <item name="android:textColorSecondary">@color/dim_beige</item>
        <item name="android:textColorPrimaryInverse">@color/beige</item>
    </style>

    <style name="CustomTimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/ltgray</item>
        <item name="android:timePickerMode">spinner</item>
    </style>


    <style name="custom_pos_button">
        <item name="android:backgroundTint">@color/burnt</item>
        <item name="android:textColor">@color/beige</item>
    </style>

    <style name="custom_neg_button">
        <item name="android:textColor">@color/beige</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>